<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.higherorlower.GameController"
      spacing="10" alignment="CENTER" style="-fx-background-color: #383889;" >

    <Label fx:id="cardLabel" text="Current Card: ?" style="-fx-text-fill: white;"/>
    <ImageView fx:id="cardImageView" fitHeight="200" fitWidth="150" />

    <Label fx:id="pointsLabel" text="Points: 0"  style="-fx-text-fill: white;" />
    <Label fx:id="streakLabel" text="Streak: 0" style="-fx-text-fill: white;"/>

    <HBox alignment="CENTER" spacing="10">
        <Button text="Higher" fx:id="higherButton" onAction="#playHigher" />
        <Button text="Lower" fx:id="lowerButton" onAction="#playLower" />
    </HBox>
</VBox>

